extends layout
block content
    h1 #{title}: #{genre.name}

    if genre_books.length
        p #[strong Borrar los siguientes libros antes de eliminar el genero.]
        div(style='margin-left:20px;margin-top:20px')

        h4 Libros
    
        dl
        each book in genre_books
            dt 
                a(href=book.url) #{book.title}
            dd #{book.summary}
    else
        p Esta seguro de eliminar el genero?
        form(method='POST' action='')
            div.form-group
                input#genreid.form-control(type='hidden', name='genreid', required='true', value=genre._id)
            button.btn.btn-primary(type='submit') Eliminar
            
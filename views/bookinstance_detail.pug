extends layout

block content

  h1 ID: #{bookinstance._id}
  
  p #[strong Titulo:]
    a(href=bookinstance.book.url) #{bookinstance.book.title}
  p #[strong Impresion:] #{bookinstance.imprint}

  p #[strong Status:] 
    if bookinstance.status=='Available'
      span.text-success #{bookinstance.status}
    else if bookinstance.status=='Maintenance'
      span.text-danger #{bookinstance.status}
    else
      span.text-warning #{bookinstance.status} 
      
  if bookinstance.status!='Available'
    p #[strong fecha devolucion:] #{bookinstance.due_back_formatted}

  p
    a(href=bookinstance.url+'/delete') Borrar instancia de libro
  p
    a(href=bookinstance.url+'/update') Actualizar instancia de libro
  